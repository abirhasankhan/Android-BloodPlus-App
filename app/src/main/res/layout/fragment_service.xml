<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f4f4"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relaLL01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img01"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_medical_services_24"/>

        <TextView
            android:id="@+id/header_title01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/tipsPage"
            android:layout_toEndOf="@id/img01"
            android:text="Get Health tips!"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/baseline01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch free help tips online"
            android:textColor="#969595"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/header_title01"
            android:layout_toEndOf="@id/img01"/>

        <Button
            android:id="@+id/tipsPage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_east_24"
            android:backgroundTint="@color/black"
            app:backgroundTint="#009688"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaLL02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/img02"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_directions_run_24"/>

        <TextView
            android:id="@+id/header_title02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/stepsPage"
            android:layout_toEndOf="@id/img02"
            android:text="Steps counter"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/baseline02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not available yet"
            android:textColor="#F40707"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/header_title02"
            android:layout_toStartOf="@id/stepsPage"
            android:layout_toEndOf="@id/img02"/>

        <Button
            android:id="@+id/stepsPage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_baseline_east_24"
            android:backgroundTint="@color/black"
            app:backgroundTint="#009688"/>
    </RelativeLayout>


</LinearLayout>