<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/profileLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/proUserImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Navigation header"
            app:civ_border_width="3dp"
            app:civ_border_color="#000"
            android:background="@drawable/kindpng_723761" />

        <TextView
            android:id="@+id/proUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="User Name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/proUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="useremail@com"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    </LinearLayout>
    <Button
        android:id="@+id/userDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usser"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#EE5D4D"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="#EE5D4D"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/userDetail"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileLL"/>

</RelativeLayout>